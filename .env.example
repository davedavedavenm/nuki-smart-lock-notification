# Nuki Smart Lock Notification System - Environment Variables Template
# Copy this file to .env and fill in your values

# --- General Settings ---
# NUKI_NOTIFICATION_TYPE: both, telegram, email, or none
NUKI_NOTIFICATION_TYPE=both
NUKI_POLLING_INTERVAL=60

# --- API Settings ---
NUKI_API_TOKEN=your_nuki_api_token_here
# NUKI_SMARTLOCK_ID=your_explicit_lock_id_here
# NUKI_USE_EXPLICIT_ID=false

# --- Telegram Settings ---
NUKI_TELEGRAM_BOT_TOKEN=your_bot_token_here
NUKI_TELEGRAM_CHAT_ID=your_chat_id_here
NUKI_TELEGRAM_USE_EMOJI=true
NUKI_TELEGRAM_FORMAT=detailed

# --- Email Settings ---
NUKI_SMTP_SERVER=smtp.gmail.com
NUKI_SMTP_PORT=587
NUKI_EMAIL_USERNAME=your_email@gmail.com
NUKI_EMAIL_PASSWORD=your_app_password_here
NUKI_EMAIL_SENDER=your_email@gmail.com
NUKI_EMAIL_RECIPIENT=recipient_email@example.com
NUKI_EMAIL_USE_HTML=true
NUKI_EMAIL_SUBJECT_PREFIX=Nuki Alert

# --- Notification Filters ---
# Comma-separated lists
NUKI_EXCLUDED_USERS=
NUKI_EXCLUDED_ACTIONS=
NUKI_EXCLUDED_TRIGGERS=

# --- Advanced Settings ---
NUKI_DEBUG_MODE=false
NUKI_MAX_EVENTS_PER_CHECK=5
NUKI_MAX_HISTORICAL_EVENTS=20
NUKI_USER_CACHE_TIMEOUT=3600
NUKI_RETRY_ON_FAILURE=true
NUKI_MAX_RETRIES=3
NUKI_RETRY_DELAY=5

# --- Docker/System Settings ---
CONFIG_DIR=/app/config
LOGS_DIR=/app/logs
TZ=Europe/London
SECRET_KEY=generate_a_random_secret_key_here
