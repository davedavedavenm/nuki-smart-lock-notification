FROM python:3.11-slim-bookworm

WORKDIR /app

# Install dependencies and system packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -r nuki && useradd -r -g nuki nuki

# Copy requirements first for better caching
COPY requirements-web.txt .
RUN pip install --no-cache-dir -r requirements-web.txt \
    && pip install --no-cache-dir psutil gunicorn

# Copy application code with ownership
COPY --chown=nuki:nuki web /app/web
COPY --chown=nuki:nuki scripts /app/scripts
COPY --chown=nuki:nuki config /app/config
COPY --chown=nuki:nuki docker-entrypoint-web.sh /app/
COPY --chown=nuki:nuki fix-template.sh /app/

# Create directories with proper permissions
RUN mkdir -p /app/logs /app/data \
    && chown -R nuki:nuki /app/logs /app/data /app/config \
    && chmod -R 755 /app/logs /app/data /app/config \
    && chmod +x /app/docker-entrypoint-web.sh \
    && chmod +x /app/fix-template.sh

# Set environment variables
ENV CONFIG_DIR=/app/config
ENV LOGS_DIR=/app/logs
ENV FLASK_APP=web/app.py
ENV PYTHONUNBUFFERED=1

# Switch to non-root user
USER nuki

# Expose the web port
EXPOSE 5000

# Healthcheck
HEALTHCHECK --interval=60s --timeout=10s --start-period=20s --retries=3 \
    CMD curl -f http://localhost:5000/health || exit 1

# Run the Flask application with fixes
ENTRYPOINT ["/app/fix-template.sh", "/app/docker-entrypoint-web.sh"]
CMD ["gunicorn", "--bind", "0.0.0.0:5000", "--workers", "2", "--timeout", "60", "web.app:app"]
